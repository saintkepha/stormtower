{
    "name": "stormtower",
	"description": "stormtower handles the connectivity from stormflash agents and provides visibility, also acts as a translator between stormlight and agents",
	"version": "1.0.0",
	"author": "Priyabrata Sahoo",
	"homepage": "http://stormstack.org",
	"repository": {
		"type": "git",
		"url": "git://github.com/stormstack/stormtower.git"
	},
	"dependencies": {
		"stormagent": "0.1.x",
		"request": "2.34.x",
		"json-schema": "0.2.0",
		"async": "0.8.x",
		"node-uuid": "1.3.x",
		"minimist":"0.1.0",
        "optimist":"0.6.0",
		"find-in-path":"0.0.x",
		"dirty": "0.9.x"
	},
	"devDependencies": {
		"coffee-script": ">=1.3"
	},
	"optionalDependencies": {},
	"engines": {
		"node": ">=0.6.x"
	},
	"main": "./lib/stormtower",
	"config": {
		"port": 8020,
		"uuid": "stormtower",
		"stormbolt": "localhost:8000",
		"logfile": "/var/log/stormtower.log",
		"datadir": "/var/stormtower",
		"storm": {
			"agent": true,
			"functions": [
				"agent.getPollingData",
				"agent.getGlobalChecksum",
				"agent.startPolling",
				"agent.httpReqSender"
			],
			"plugins": [
				"lib/plugin"
			]
		}
	},
	"scripts": {
		"prepublish": "find src -name '*.coffee' | xargs coffee -o lib -c",
		"start": "node lib/app.js"
	},
	"contributors": [
		"Sivaprasath Busa",
		"Priyabrata Sahoo"
	]
}
